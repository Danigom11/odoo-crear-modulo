<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree/List -->
    <record id="view_economia_registro_tree" model="ir.ui.view">
        <field name="name">economia.registro.tree</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <tree string="Registros de Economía Circular">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="tipo_id"/>
                <field name="cantidad"/>
                <field name="impacto_co2" string="CO₂ Reducido (kg)"/>
                <field name="impacto_agua" string="Agua Ahorrada (L)"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_economia_registro_form" model="ir.ui.view">
        <field name="name">economia.registro.form</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <form string="Registro de Economía Circular">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="tipo_id"/>
                            <field name="cantidad"/>
                        </group>
                        <group>
                            <field name="impacto_co2" readonly="1"/>
                            <field name="impacto_agua" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_economia_circular" model="ir.actions.act_window">
        <field name="name">Economía Circular</field>
        <field name="res_model">economia.registro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_economia_root" name="Economía Circular" action="action_economia_circular"/>
</odoo>