<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_economia_registro_form" model="ir.ui.view">
        <field name="name">economia.registro.form</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('state', '!=', 'confirmed')]}">
                    <span class="ribbon ribbon-top-right"><span>CERTIFICADO</span></span>
                </div>
                <header>
                    <button name="action_confirm" type="object" string="Validar" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_draft" type="object" string="Volver a Borrador" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="tipo_id"/>
                            <field name="fecha"/>
                        </group>
                        <group>
                            <field name="cantidad"/>
                            <field name="state"/>
                            <field name="impacto_co2" readonly="1" widget="gauge" options="{'max_field': 'impacto_co2', 'style': 'width:200px; height:120px;'}"/>
                            <field name="impacto_agua" readonly="1" widget="gauge" options="{'max_field': 'impacto_agua', 'style': 'width:200px; height:120px;'}"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

