<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario -->
    <record id="view_economia_registro_form" model="ir.ui.view">
        <field name="name">economia.registro.form</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="descripcion"/>
                        </group>
                        <group>
                            <field name="cantidad"/>
                            <field name="tipo_id"/>
                        </group>
                    </group>
                    <group string="Impacto Ambiental">
                        <group>
                            <field name="impacto_co2" readonly="1" widget="gauge" 
                                   options="{'max_field': 'impacto_co2', 'style': 'width:200px; height:120px;'}"/>
                        </group>
                        <group>
                            <field name="impacto_agua" readonly="1" widget="gauge"
                                   options="{'max_field': 'impacto_agua', 'style': 'width:200px; height:120px;'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista -->
    <record id="view_economia_registro_tree" model="ir.ui.view">
        <field name="name">economia.registro.tree</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="cantidad"/>
                <field name="tipo_id"/>
                <field name="impacto_co2"/>
                <field name="impacto_agua"/>
            </tree>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_economia_circular" model="ir.actions.act_window">
        <field name="name">Economía Circular</field>
        <field name="res_model">economia.registro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_economia_root" name="Economía Circular" action="action_economia_circular"/>
</odoo>