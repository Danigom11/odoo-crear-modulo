<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_registro_tree" model="ir.ui.view">
        <field name="name">economia.registro.tree</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="tipo_id"/>
                <field name="cantidad"/>
                <field name="fecha"/>
            </tree>
        </field>
    </record>

    <record id="view_registro_form" model="ir.ui.view">
        <field name="name">economia.registro.form</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="tipo_id"/>
                        <field name="cantidad"/>
                        <field name="fecha"/>
                        <field name="notas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_registro" model="ir.actions.act_window">
        <field name="name">Registro de Entregas</field>
        <field name="res_model">economia.registro</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_registro" name="Registro de Entregas" action="action_registro"/>
</odoo>