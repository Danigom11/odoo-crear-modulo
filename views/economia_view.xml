<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_economia_circular" model="ir.actions.act_window">
        <field name="name">Economía Circular</field>
        <field name="res_model">economia.registro</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista formulario -->
    <record id="view_economia_form" model="ir.ui.view">
        <field name="name">economia.registro.form</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('state', '!=', 'confirmed')]}">
                    <span class="ribbon ribbon-top-right"><span>CERTIFICADO</span></span>
                </div>
                <header>
                    <button name="action_confirm" type="object" string="Validar" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_draft" type="object" string="Volver a Borrador" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista -->
    <record id="view_economia_tree" model="ir.ui.view">
        <field name="name">economia.registro.tree</field>
        <field name="model">economia.registro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_economia_root" name="Economía Circular" action="action_economia_circular"/>
</odoo>